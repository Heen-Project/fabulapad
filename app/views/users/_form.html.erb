<%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, placeholder: 'Type your username here', class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: 'Type your email here', class: "form-control" %>
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: 'Type your password here', class: "form-control" %>
    </div>
    <%= render 'shared/error', obj: @user %>
    <div class="text-right">
        <% if !@user.new_record? %>
            <%= link_to "Delete Account", user_path(current_user), method: :delete, 
                data: { confirm: "Are you sure you want to delete your profile?" },
                class:"btn btn-danger" %>
        <% end %>
        <%= form.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary") %>
    </div>
<% end %>